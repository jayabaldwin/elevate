<div class="container-fluid">
    <!-- Sidebar -->
    <div class="sidebar">
        {{> sidebar}}
    </div>

    <!-- Page content -->
    <div class="content">
        {{> navbar }}
        <div class="container">
            <div class="row">
                <div class="d-flex justify-content-start align-items-stretch flex-wrap">
                    {{!-- RENDER SORTABLE PROJECT TILES --}}
                    {{!-- Render --}}
                    {{#each projects}}
                    <div class="card text-white bg-dark mb-3 mr-3" style="width: 16rem; height: 12rem">
                        <div class="card-header"><i class="fa-solid fa-list-check" style="color: #ffffff;"></i> Open Project</div>
                        <div class="card-body">
                            <h5 class="card-title text-white">{{name}}</h5>
                            <p class="card-text text-white">{{description}}</p>
                        </div>
                    </div>
                    {{/each}}
                    <a href="#" data-toggle="modal" data-target="#project-modal" class="text-decoration-none">
                        <div class="card text-white bg-transparent border-white mb-3" style="width: 16rem; height: 12rem">
                            <div class="card-body d-flex align-center justify-content-center">
                                <h5 class="card-title text-white mt-5">
                                    <i class="fa-regular fa-square-plus" style="color: #ffffff;"></i> ADD PROJECT
                                </h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{{> projectModal}}

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.14.0/Sortable.min.js"></script>
<script src="/js/sortable.js"></script>
<script src="/js/project.js"></script>