{{!-- Create task Modal --}}
<div class="modal fade" id="task-create-modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Task</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="task-title" class="text-left">Title:</label>
          <input
            type="text"
            class="form-control"
            id="task-title"
            aria-describedby="add-title"
            placeholder="Add task"
            required
          />
          {{! <small id="add-title" class="form-text text-muted">Placeholder</small> }}
        </div>
        <div class="form-group">
          <label for="task-description" class="text-left">Description:</label>
          <input
            type="text"
            class="form-control"
            id="task-description"
            placeholder="Task details"
            required
          />
        </div>
        {{!-- <div class="form-group">
          <label for="task-deadline" class="text-left">Deadline:</label>
          <input
            type="text"
            class="form-control"
            id="task-deadline"
            placeholder="Enter deadline"
          />
        </div> --}}
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Cancel</button>
        <button type="button" id="task-add-btn" class="btn btn-dark">Add</button>
      </div>
    </div>
  </div>
</div>

